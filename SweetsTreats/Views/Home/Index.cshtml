@{
    Layout = "_Layout";
}

<div class="container">
    <div class="card">
        <h1>Welcome to the Pierre's Sweet Treats!</h1>
        <p>@Html.ActionLink("See all treats", "Index", "Treats")</p>
        <p>@Html.ActionLink("See all flavors", "Index", "Flavors") (must have a flavor before you can make Treats)</p>
        
       @if (User.Identity.IsAuthenticated)
        {
            <p>Hello @User.Identity.Name!</p>
            @using (Html.BeginForm("LogOff", "Account"))
            {
                <input type="submit" class="btn btn-default" value="Log out" />
            }
        } else {
            <p>@Html.ActionLink("Login", "Login", "Account")</p>
            <p>@Html.ActionLink("Register", "Register", "Account")</p>
        }
    </div>
</div>